---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getCurrentUser, getSiteSettings, updateSiteSettings } from '../../services/supabase';

// Verificar autenticação
const user = await getCurrentUser();
if (!user) {
  return Astro.redirect('/login');
}

// Buscar configurações atuais
const settings = await getSiteSettings();

// Processar formulário
let message = '';
let success = false;

if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    
    const newSettings = {
      heroTitle: formData.get('heroTitle'),
      heroDescription: formData.get('heroDescription'),
      heroImageUrl: formData.get('heroImageUrl'),
      contactPhone: formData.get('contactPhone'),
      contactWhatsapp: formData.get('contactWhatsapp'),
      paymentMethods: formData.get('paymentMethods'),
      whatsappMessage: formData.get('whatsappMessage')
    };
    
    const result = await updateSiteSettings(newSettings);
    
    if (result.success) {
      message = 'Configurações atualizadas com sucesso!';
      success = true;
    } else {
      message = `Erro ao atualizar configurações: ${result.message}`;
      success = false;
    }
  } catch (error) {
    console.error('Erro ao processar formulário:', error);
    message = 'Erro ao processar formulário';
    success = false;
  }
}
---

<AdminLayout title="Configurações do Site">
  <div class="container px-6 mx-auto">
    <h2 class="text-2xl font-semibold text-gray-900 mb-6">
      Configurações do Site
    </h2>
    
    {message && (
      <div class={`mb-6 p-4 rounded-lg ${success ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}`}>
        {message}
      </div>
    )}
    
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <form method="POST" class="p-6 space-y-6">
        <div class="border-b border-gray-200 pb-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Hero Section</h3>
          
          <div class="grid grid-cols-1 gap-6">
            <div>
              <label for="heroTitle" class="block text-sm font-medium text-gray-700 mb-1">
                Título Principal
              </label>
              <input
                type="text"
                id="heroTitle"
                name="heroTitle"
                value={settings?.heroTitle || ''}
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
              />
            </div>
            
            <div>
              <label for="heroDescription" class="block text-sm font-medium text-gray-700 mb-1">
                Descrição
              </label>
              <textarea
                id="heroDescription"
                name="heroDescription"
                rows="3"
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
              >{settings?.heroDescription || ''}</textarea>
            </div>
            
            <div>
              <label for="heroImageUrl" class="block text-sm font-medium text-gray-700 mb-1">
                URL da Imagem de Fundo
              </label>
              <input
                type="text"
                id="heroImageUrl"
                name="heroImageUrl"
                value={settings?.heroImageUrl || ''}
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
              />
              <p class="mt-1 text-sm text-gray-500">
                URL da imagem de fundo para a seção principal. Recomendado: 1920x1080px.
              </p>
            </div>
          </div>
        </div>
        
        <div class="border-b border-gray-200 pb-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Informações de Contato</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="contactPhone" class="block text-sm font-medium text-gray-700 mb-1">
                Telefone
              </label>
              <input
                type="text"
                id="contactPhone"
                name="contactPhone"
                value={settings?.contactPhone || ''}
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
              />
            </div>
            
            <div>
              <label for="contactWhatsapp" class="block text-sm font-medium text-gray-700 mb-1">
                WhatsApp (com DDD)
              </label>
              <input
                type="text"
                id="contactWhatsapp"
                name="contactWhatsapp"
                value={settings?.contactWhatsapp || ''}
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
              />
              <p class="mt-1 text-sm text-gray-500">
                Número que receberá mensagens de interesse (ex: 11999999999)
              </p>
            </div>
          </div>
        </div>
        
        <div>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Configurações de Venda</h3>
          
          <div class="grid grid-cols-1 gap-6">
            <div>
              <label for="paymentMethods" class="block text-sm font-medium text-gray-700 mb-1">
                Formas de Pagamento
              </label>
              <input
                type="text"
                id="paymentMethods"
                name="paymentMethods"
                value={settings?.paymentMethods || ''}
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
              />
              <p class="mt-1 text-sm text-gray-500">
                Descreva as formas de pagamento aceitas
              </p>
            </div>
            
            <div>
              <label for="whatsappMessage" class="block text-sm font-medium text-gray-700 mb-1">
                Mensagem padrão do WhatsApp
              </label>
              <input
                type="text"
                id="whatsappMessage"
                name="whatsappMessage"
                value={settings?.whatsappMessage || ''}
                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
              />
              <p class="mt-1 text-sm text-gray-500">
                Mensagem que será enviada quando alguém demonstrar interesse
              </p>
            </div>
          </div>
        </div>
        
        <div class="flex justify-end">
          <button
            type="submit"
            class="px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2"
          >
            Salvar Configurações
          </button>
        </div>
      </form>
    </div>
  </div>
</AdminLayout>
