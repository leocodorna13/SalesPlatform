---
interface Props {
  id: string;
  title: string;
  price: number;
  status: 'available' | 'sold';
  imageUrl: string | null;
  category: {
    name: string;
    slug: string;
  } | null;
  viewsCount: number;
  interestCount: number;
}

const { id, title, price, status, imageUrl, category, viewsCount = 0, interestCount = 0 } = Astro.props;

console.log('ProductCard recebeu interestCount:', interestCount, 'para produto:', id);

// Formatar preço
const formattedPrice = new Intl.NumberFormat('pt-BR', {
  style: 'currency',
  currency: 'BRL'
}).format(price);
---

<div class="product-card group bg-white rounded-xl overflow-hidden shadow-hover transition-all duration-300 hover:shadow-xl hover:-translate-y-1 h-full flex flex-col">
  <!-- Imagem do produto com overlay de status -->
  <div class="relative overflow-hidden aspect-square">
    <img 
      src={imageUrl || '/placeholder-product.jpg'} 
      alt={title}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
    
    <!-- Botão de visualização rápida -->
    <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
      <a 
        href={`/produto/${id}`} 
        class="bg-white/90 hover:bg-white text-primary-700 hover:text-primary-800 font-medium py-2 px-4 rounded-full shadow-md transform translate-y-4 group-hover:translate-y-0 transition-all duration-300"
      >
        <i class="fas fa-eye mr-2"></i> Ver detalhes
      </a>
    </div>
  </div>
  
  <!-- Corpo do card -->
  <div class="p-5 flex-grow flex flex-col">
    <!-- Categoria e status -->
    <div class="flex justify-between items-center mb-2">
      {category && category.name && (
        <span class="badge text-xs font-medium px-2.5 py-1 rounded-full bg-neutral-100 text-neutral-600">
          {category.name}
        </span>
      )}
      
      {status === 'sold' ? (
        <span class="badge text-xs font-medium px-2.5 py-1 rounded-full bg-red-100 text-red-600">
          Vendido
        </span>
      ) : (
        <span class="badge text-xs font-medium px-2.5 py-1 rounded-full bg-green-100 text-green-600">
          Disponível
        </span>
      )}
    </div>
    
    <!-- Título do produto -->
    <h3 class="text-lg font-bold text-neutral-800 mb-2 line-clamp-2 h-14">
      {title}
    </h3>
    
    <!-- Preço -->
    <div class="mt-auto">
      <p class="text-accent-600 font-bold text-xl mb-4">
        {formattedPrice}
      </p>
      
      <!-- Botão e estatísticas -->
      <div class="flex flex-col gap-3">
        <a 
          href={`/produto/${id}`} 
          class="mt-2 btn btn-primary w-full block text-center group-hover:shadow-md transition-all"
          aria-disabled={status === 'sold'}
        >
          {status === 'available' ? (
            <><i class="fas fa-shopping-cart mr-2"></i> Ver detalhes</>
          ) : (
            <><i class="fas fa-ban mr-2"></i> Produto vendido</>
          )}
        </a>
        
        <div class="flex justify-between text-sm text-neutral-500 mb-4">
          <span class="flex items-center">
            <i class="fas fa-eye mr-1.5 text-primary-400"></i>{viewsCount || 0} visualizações
          </span>
          <span class="flex items-center">
            <i class="fas fa-heart mr-1.5 text-accent-500"></i>{interestCount || 0} interessados
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
