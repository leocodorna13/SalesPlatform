---
interface Props {
  category: {
    id: string;
    name: string;
    slug: string;
  };
  dataDelay?: string;
}

const { category, dataDelay = "0s" } = Astro.props;
---

<a 
  href={`/categoria/${category.slug}`} 
  class="category-card group bg-white rounded-lg shadow-sm hover:shadow-md transition-all duration-300 overflow-hidden flex flex-col items-center justify-center text-center p-3 h-24 sm:h-28"
  data-delay={dataDelay}
>
  <div class="w-8 h-8 flex items-center justify-center bg-primary-50 text-primary-500 rounded-full mb-2">
    <i class="fas fa-tag text-primary-500"></i>
  </div>
  <h3 class="text-sm font-medium text-neutral-800 group-hover:text-primary-600 transition-colors">
    {category.name}
  </h3>
</a>

<style>
  .category-card {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s ease, transform 0.5s ease;
  }
  
  .category-card.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
