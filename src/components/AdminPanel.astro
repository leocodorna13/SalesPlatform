---
interface Stats {
  totalProducts: number;
  availableProducts: number;
  soldProducts: number;
  totalInterested: number;
  totalViews: number;
}

interface Props {
  stats: Stats;
}

const { stats } = Astro.props;
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
  <!-- Card de produtos -->
  <div class="card p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Produtos</h3>
    <div class="flex justify-between items-center">
      <div>
        <p class="text-3xl font-bold text-primary-600">{stats.totalProducts}</p>
        <p class="text-sm text-gray-500">Total</p>
      </div>
      <div class="flex gap-4">
        <div>
          <p class="text-xl font-semibold text-green-600">{stats.availableProducts}</p>
          <p class="text-xs text-gray-500">Disponíveis</p>
        </div>
        <div>
          <p class="text-xl font-semibold text-red-600">{stats.soldProducts}</p>
          <p class="text-xs text-gray-500">Vendidos</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Card de visualizações -->
  <div class="card p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Visualizações</h3>
    <div>
      <p class="text-3xl font-bold text-primary-600">{stats.totalViews}</p>
      <p class="text-sm text-gray-500">Total de visualizações</p>
    </div>
    <div class="mt-2">
      <p class="text-sm text-gray-600">
        Média: {stats.totalProducts > 0 ? Math.round(stats.totalViews / stats.totalProducts) : 0} por produto
      </p>
    </div>
  </div>
  
  <!-- Card de interessados -->
  <div class="card p-6">
    <h3 class="text-lg font-medium text-gray-900 mb-4">Interessados</h3>
    <div>
      <p class="text-3xl font-bold text-primary-600">{stats.totalInterested}</p>
      <p class="text-sm text-gray-500">Total de interessados</p>
    </div>
    <div class="mt-2">
      <p class="text-sm text-gray-600">
        Média: {stats.totalProducts > 0 ? Math.round(stats.totalInterested / stats.totalProducts) : 0} por produto
      </p>
    </div>
  </div>
</div>

<div class="flex justify-between items-center mb-6">
  <h3 class="text-lg font-medium text-gray-900">Ações rápidas</h3>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
  <a href="/admin/produtos/novo" class="card p-6 hover:shadow-lg transition-shadow flex items-center">
    <div class="bg-primary-100 p-3 rounded-full mr-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
    </div>
    <div>
      <h4 class="text-lg font-medium text-gray-900">Adicionar produto</h4>
      <p class="text-sm text-gray-500">Cadastre um novo item para venda</p>
    </div>
  </a>
  
  <a href="/admin/categorias/nova" class="card p-6 hover:shadow-lg transition-shadow flex items-center">
    <div class="bg-secondary-100 p-3 rounded-full mr-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-secondary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
      </svg>
    </div>
    <div>
      <h4 class="text-lg font-medium text-gray-900">Nova categoria</h4>
      <p class="text-sm text-gray-500">Crie uma categoria para organizar produtos</p>
    </div>
  </a>
  
  <a href="/admin/produtos" class="card p-6 hover:shadow-lg transition-shadow flex items-center">
    <div class="bg-green-100 p-3 rounded-full mr-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
      </svg>
    </div>
    <div>
      <h4 class="text-lg font-medium text-gray-900">Gerenciar produtos</h4>
      <p class="text-sm text-gray-500">Edite ou marque produtos como vendidos</p>
    </div>
  </a>
  
  <a href="/admin/interessados" class="card p-6 hover:shadow-lg transition-shadow flex items-center">
    <div class="bg-yellow-100 p-3 rounded-full mr-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
    </div>
    <div>
      <h4 class="text-lg font-medium text-gray-900">Ver interessados</h4>
      <p class="text-sm text-gray-500">Acompanhe quem demonstrou interesse</p>
    </div>
  </a>
</div>
